{
    "name": "SmartThingsBridge",
    "version": "latest",
    "slug": "smartthings",
    "description": "SmartThings Mqtt Bridge (https://github.com/stjohnjohnson/smartthings-mqtt-bridge)",
    "url": "https://github.com/chingor13/hassio-addons/tree/master/smartthings",
    "image": "gcr.io/home-automation-chingr/{arch}-hassio-smartthings-mqtt-bridge",
    "startup": "before",
    "boot": "auto",
    "host_network": true,
    "options": {
        "broker_host": "172.17.0.1",
        "broker_port": 8888,
        "preface": "smartthings",
        "state_read_suffix": "state",
        "state_write_suffix": "set_state",
        "command_suffix": "cmd",
        "login": "login",
        "password": "password",
        "bridge_port": 2080,
        "retain": true
    },
    "schema": {
        "broker_host": "str",
        "broker_port": "int",
        "preface": "str",
        "state_read_suffix": "str",
        "state_write_suffix": "str",
        "command_suffix": "str",
        "login": "str",
        "password": "str",
        "bridge_port": "int",
        "retain": "bool"
    }
}